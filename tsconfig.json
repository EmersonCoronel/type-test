{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src", // Only compile src files
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["src"], // Only include src for compilation
  "exclude": ["dev", "node_modules"] // Exclude dev files from build
}
